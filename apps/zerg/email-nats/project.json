{
  "name": "zerg_email_nats",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/zerg/email-nats/src",
  "targets": {
    "build": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build --package zerg_email_nats",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "production": {
          "command": "cargo build --package zerg_email_nats --release"
        }
      }
    },
    "test": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test --package zerg_email_nats",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy --package zerg_email_nats",
        "cwd": "{workspaceRoot}"
      }
    },
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo run --package zerg_email_nats",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "production": {
          "command": "cargo run --package zerg_email_nats --release"
        }
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "options": {
        "file": "manifests/dockers/rust.Dockerfile",
        "context": ".",
        "build-args": [
          "APP_NAME=zerg_email_nats"
        ],
        "tags": [
          "$REGISTRY/zerg-email-nats:latest"
        ],
        "push": false
      },
      "configurations": {
        "ci": {
          "push": true,
          "metadata": {
            "images": [
              "$REGISTRY/zerg-email-nats"
            ],
            "tags": [
              "type=sha",
              "type=ref,event=branch",
              "type=ref,event=tag",
              "type=ref,event=pr",
              "type=semver,pattern={{version}}"
            ]
          }
        }
      }
    },
    "scan": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "container"
      ],
      "options": {
        "command": "trivy image $REGISTRY/zerg-email-nats:latest --severity CRITICAL,HIGH --exit-code 0",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "ci": {
          "command": "trivy image $REGISTRY/zerg-email-nats:sha-$(echo $SHORT_SHA | cut -c1-7) --severity CRITICAL,HIGH --format sarif --output trivy-zerg-email-nats.sarif"
        }
      }
    }
  },
  "tags": []
}
