{
  "name": "rpc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/rpc/src",
  "targets": {
    "generate": {
      "cache": true,
      "executor": "nx:run-commands",
      "outputs": [
        "{projectRoot}/src/generated",
        "{projectRoot}/types"
      ],
      "inputs": [
        "{workspaceRoot}/manifests/grpc/proto/**/*.proto",
        "{workspaceRoot}/manifests/grpc/buf.gen.yaml"
      ],
      "options": {
        "command": "cd manifests/grpc && buf generate",
        "cwd": "{workspaceRoot}"
      }
    },
    "build": {
      "cache": true,
      "dependsOn": ["generate"],
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/dist/target"
      ],
      "options": {
        "command": "cargo check --package rpc",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "cache": true,
      "executor": "nx:run-commands",
      "outputs": [
        "{workspaceRoot}/dist/target"
      ],
      "options": {
        "command": "cargo test --package rpc",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy --package rpc",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": []
}
